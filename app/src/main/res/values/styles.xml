<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


<!--    Estilo para el Header (Numeros)-->
    <style name="AppTheme.header" parent="AppTheme">
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTexto</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

<!--    Estilo para el boton Llamar-->
    <style name="AppTheme.botonLlamar" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:background">@drawable/boton_llamar</item>
    </style>

    <!--    Estilo para los botones numeros izquierda-->
    <style name="AppTheme.botonNumeroIzquierdo" parent="AppTheme">
        <item name="android:textSize">35sp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:background">@drawable/boton_redondo</item>
    </style>

    <!--    Estilo para los botones numeros centrales-->
    <style name="AppTheme.botonNumeroCentro" parent="AppTheme">
        <item name="android:textSize">35sp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:background">@drawable/boton_redondo</item>
    </style>

    <!--    Estilo para los botones numeros derecha-->
    <style name="AppTheme.botonNumeroDerecho" parent="AppTheme">
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:background">@drawable/boton_redondo</item>
    </style>

    <!--    Estilo para los boton Clear -->
    <style name="AppTheme.botonClear" parent="AppTheme">
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:background">@drawable/boton_clear</item>
    </style>

</resources>
